{
  "name": "create-esnext",
  "bin": {
    "create-esnext": "dist/index.js"
  },
  "platform": "node",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.js",
    "./*": "./dist/*/index.js"
  },
  "scripts": {
    "dev": "tsmodule dev",
    "build": "tsmodule build -b",
    "test": "ava --no-worker-threads",
    "lint": "eslint src --fix",
    "pretest": "tsmodule build -rb",
    "prepublishOnly": "yarn build && yarn test"
  },
  "ava": {
    "timout": 240000,
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--no-warnings",
      "--loader=@tsmodule/tsmodule"
    ]
  },
  "devDependencies": {
    "@tsmodule/tsmodule": "^38.0.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "ava": "^4.1.0",
    "await-shell": "^34.1.1",
    "chalk": "^5.0.1",
    "commander": "^9.1.0",
    "eslint": "^8.12.0"
  }
}
